.logo-wrapper {
  float: left;
  margin: 0 2em 1em 0;
}

.person-container {
  display: flex;
  flex-direction: row;
}

.person-left {
  flex: 0 0 160px;
  @media only screen and (max-width: 599px) {
    flex-basis: 120px
  }
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.person-right {
  flex: 1 1 auto;
}

.person-photo {
  width: 160px;
  @media only screen and (max-width: 599px) {
    width: 120px;
  }
}

